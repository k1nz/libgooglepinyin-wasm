{
  "name": "libgooglepinyin-wasm",
  "version": "0.0.1",
  "description": "google pinyin compiled to WebAssembly",
  "main": "out/index.js",
  "scripts": {
    "test": "mocha",
    "build": "npm run build:lib && npm run build:decoder",
    "build:lib": "emcmake cmake ./googlepinyin/ -Bbuild && cmake --build build",
    "build:decoder-deps": "emcc -pthread -sINITIAL_MEMORY=64MB -L./build -lGooglePinyin -lembind -I./googlepinyin/ src/decoder.cpp",
    "build:webdecoder": "npm run build:decoder-deps -- -lidbfs.js --embed-file data/* -o out/decoder.js",
    "build:node-decoder": "npm run build:decoder-deps -- -sNODERAWFS -lnodefs.js --pre-js ./out/apitest.js -o out/debug.js",
    "build:noeval-decoder": "npm run build:webdecoder -- -sDYNAMIC_EXECUTION=0",
    "debug:node": "npm run build:node-decoder && cp -r data/* ./out && cd out && node --experimental-wasm-threads --experimental-wasm-bulk-memory ./debug.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhangkaiser/libgooglepinyin-wasm.git"
  },
  "keywords": [
    "IME",
    "Chinese",
    "pinyin",
    "shuangpin"
  ],
  "author": "KaiserZh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zhangkaiser/libgooglepinyin-wasm/issues"
  },
  "homepage": "https://github.com/zhangkaiser/libgooglepinyin-wasm#readme",
  "devDependencies": {
    "@types/emscripten": "^1.39.6",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
